rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {    
    match /posts/{document=**} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    match /services/{service} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    match /incidents/{incident} {
      allow read: if true;
      allow write: if request.auth != null;
    }
    
    match /admins/{email} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
    
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
  }
}
